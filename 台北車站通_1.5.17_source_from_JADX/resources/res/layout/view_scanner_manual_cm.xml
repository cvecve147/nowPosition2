<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:id="@+id/remind" android:background="@color/dimgray" android:padding="@dimen/padding_8" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/scanner_p_manual_remind" android:layout_alignParentTop="true" style="@style/ChWhiteText"/>
            <android.support.percent.PercentRelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/remind">
                <ImageView android:id="@+id/top" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@mipmap/i_keyin_top" android:scaleType="fitStart" android:adjustViewBounds="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
                <ImageView android:id="@+id/mid" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@mipmap/i_keyin_mid" android:scaleType="fitCenter" android:adjustViewBounds="true" android:layout_below="@+id/top" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
                <ImageView android:id="@+id/bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@mipmap/i_keyin_bot" android:scaleType="fitCenter" android:adjustViewBounds="true" android:layout_below="@+id/mid"/>
                <android.support.percent.PercentRelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_alignTop="@+id/mid" android:layout_alignBottom="@+id/mid" app:layout_marginLeftPercent="5%" app:layout_marginRightPercent="5%">
                    <android.support.design.widget.TextInputEditText android:textSize="14sp" android:id="@+id/code_input" android:layout_width="match_parent" android:layout_height="0dp" android:hint="@string/scanner_p_code" android:layout_alignParentTop="true" android:inputType="text" app:layout_heightPercent="25%"/>
                    <android.support.design.widget.TextInputEditText android:textSize="14sp" android:id="@+id/date_input" android:layout_width="match_parent" android:layout_height="0dp" android:hint="@string/scanner_p_date" android:layout_below="@+id/code_input" android:inputType="text" app:layout_heightPercent="25%" app:layout_widthPercent="50%"/>
                    <android.support.design.widget.TextInputEditText android:textSize="14sp" android:id="@+id/random_input" android:layout_width="match_parent" android:layout_height="0dp" android:hint="@string/scanner_p_random" android:layout_below="@+id/date_input" android:inputType="text" app:layout_heightPercent="25%" app:layout_widthPercent="50%"/>
                    <android.support.design.widget.TextInputEditText android:textSize="14sp" android:id="@+id/seller_input" android:layout_width="match_parent" android:layout_height="0dp" android:hint="@string/scanner_p_seller" android:layout_below="@+id/random_input" android:inputType="text" app:layout_heightPercent="25%" app:layout_widthPercent="50%"/>
                </android.support.percent.PercentRelativeLayout>
            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:id="@+id/lLayButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_16" android:layout_alignParentBottom="true" android:showDividers="middle" app:layout_marginLeftPercent="5%" app:layout_marginRightPercent="5%">
        <Button android:theme="@style/MainCyanBtn" android:textAppearance="@style/ChWhiteText" android:textColor="@color/white" android:id="@+id/back" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/scanner_b_back" android:layout_weight="1"/>
        <Button android:theme="@style/MainCyanBtn" android:textAppearance="@style/ChWhiteText" android:textColor="@color/white" android:id="@+id/send" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/scanner_b_send" android:layout_weight="1"/>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
